@using Extensions.Helpers
@model IEnumerable<SDC.Web.Models.IssueModel>

@{
    ViewBag.Title = "Index";
}

<h2>Issues</h2>

<div class="row" style="margin: 10px 0">
    @if (Request.IsAuthenticated)
    {
        @Html.ActionButton("Create New", "Create", new {projectId = ViewBag.ProjectId}, new {style = "margin-right: 10px", @class = "col-sm-2 btn btn-default"})
    }
    @Html.ActionButton("Back to Projects", "Index", "Projects", null, new { @class = "col-sm-2 btn btn-default" })
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Number")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PerformerName)
        </th>
        <th></th>
    </tr>
    
    @{
        var counter = 0;
    }

    @foreach (var item in Model)
    {
        counter ++;

        <tr>
            <td>
                @counter
            </td>
            <td>
                @Html.ActionLink(item.Title, "Index", "Comments", new {issueId = item.Id}, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerformerName)
            </td>
            <td align="right">
                @Html.ActionLink("Details", "Details", new {id = item.Id})
                @if (Request.IsAuthenticated)
                {
                    @:|
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                    @:|
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                }
            </td>
        </tr>
    }

</table>